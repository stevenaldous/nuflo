            {% endif %}
            {% if block.settings.imgCTA_2_button_label != blank %}
              <a {% if block.settings.imgCTA_2_link != blank %}href="{{ block.settings.imgCTA_2_link }}"{% endif %} class="action_button">
                {{ block.settings.imgCTA_1_button_label | escape }}
              </a>
            {% endif %}
          </div>
        </div>
      </section>
</div>